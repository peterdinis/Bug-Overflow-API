generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Technology {
  id Int      @id @default(autoincrement())
  name String
  image String
  users User[]
}

model User {
  id Int      @id @default(autoincrement())
  userName String
  email String @unique
  password String
  favoriteTechnologies Technology[]
  createdAt String
  posts Post[]
  comments Comment[]
}

model Post {
  id Int     @id @default(autoincrement())
  content String
  createdAt String
  userId Int
  user User @relation(fields: [userId], references: [id])
  comments Comment[]
}

model Comment {
  id Int     @id @default(autoincrement())
  createdAt String
  commentedText String
  postId Int
  post Post @relation(fields: [postId], references: [id])
  userId Int
  user User @relation(fields: [userId], references: [id])
}